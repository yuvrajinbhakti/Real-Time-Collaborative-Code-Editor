{
  "version": 2,
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [{ "source": "/socket.io/(.*)", "destination": "/api/socket" }],
  "routes": [
    { "src": "^/api/socket$", "dest": "/api/socket" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
